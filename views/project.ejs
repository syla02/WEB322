<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= isProjectPage ? project.title : "Projects" %></title>
  <link rel="stylesheet" href="/css/main.css" />
</head>

<body tabindex="-1">

  <%- include('partials/navbar', { page: '/solutions/projects' }) %>

  <br />

  <div class="container mx-auto">
    <div class="hero bg-base-200 rounded-lg p-6">
      <div class="hero-content text-center">
        <div class="max-w-md">
          <h1 class="text-5xl font-bold"><%= isProjectPage ? project.title : "Projects" %></h1>
          <p class="py-6"><%= isProjectPage ? "Below, you will find detailed information about the project:" : "Here are some of our projects:" %></p>
        </div>
      </div>
    </div>

    <br />

    <% if (isProjectPage) { %>
     
      <img src="<%= project.feature_img_url %>" alt="Project Image" class="w-full rounded-lg mt-6" />
      <div class="mt-6 prose">
        <h2>Introduction</h2>
        <p><%= project.intro_short %></p>

        <h2>Impact</h2>
        <p><%= project.impact %></p>

        <h2>More Information</h2>
        <a href="<%= project.original_source_url %>" class="btn btn-link">Find more about this project</a>
      </div>
      <button onclick="history.back(); return false;" class="btn btn-secondary mt-4">Go Back</button>
    <% } else { %>
    
      <table class="table table-zebra w-full">
        <thead>
          <tr>
            <th>Title</th>
            <th>Sector</th>
            <th>Summary</th>
            <th>Details</th>
          </tr>
        </thead>
        <tbody>
          <% projects.forEach(project => { %>
            <tr>
              <td><%= project.title %></td>
              <td><a href="/solutions/projects?sector=<%= project.sector %>" class="btn btn-link"><%= project.sector %></a></td>
              <td><%= project.summary_short %></td>
              <td><a href="/solutions/projects/<%= project.id %>" class="btn btn-primary">Details</a></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>

</body>

</html>
